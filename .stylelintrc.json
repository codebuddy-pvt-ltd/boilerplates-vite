{
  "extends": ["stylelint-config-standard-scss", "stylelint-config-prettier-scss"],
  "rules": {
    "selector-class-pattern": "^([a-zA-Z][a-zA-Z0-9]*)([-_][a-zA-Z0-9]+)*$",
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "screen",
          "responsive",
          "variants",
          "mixins",
          "layer"
        ]
      }
    ]
  }
}
